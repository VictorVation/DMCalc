<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_gravity="center"
    tools:context="com.dmcalc.dmcalc.MainActivity$PlaceholderFragment">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number|numberSigned"
        android:ems="8"
        android:id="@+id/dividend"
        android:hint="Dividend"
        android:enabled="true"
        android:textSize="24dp"
        android:fontFamily="sans-serif-light"
        android:focusable="true"
        android:gravity="center_horizontal"
        android:clickable="true"
        android:editable="true"
        android:digits="-0987654321"
        android:layout_marginTop="22dp"
        android:imeOptions="actionNext"
        android:linksClickable="false"
        android:lines="1"
        android:maxLength="14"
        android:layout_below="@+id/dmTitle"
        android:layout_alignRight="@+id/dmTitle"
        android:layout_alignEnd="@+id/dmTitle" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="8"
        android:id="@+id/divisor"
        android:hint="Divisor"
        android:enabled="true"
        android:textSize="24dp"
        android:fontFamily="sans-serif-light"
        android:focusable="true"
        android:gravity="center_horizontal"
        android:clickable="true"
        android:editable="true"
        android:digits="-0987654321"
        android:layout_below="@+id/dividend"
        android:layout_alignLeft="@+id/dividend"
        android:layout_alignStart="@+id/dividend"
        android:lines="1"
        android:maxLength="14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter numbers."
        android:id="@+id/dmTitle"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="19dp"
        android:textSize="34dp"
        android:fontFamily="sans-serif-thin"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compute"
        android:id="@+id/calculateDivMod"
        android:fontFamily="sans-serif-light"
        android:onClick="calculateDivMod()"
        android:focusable="false"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/dmTitle"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Quotient"
        android:id="@+id/quotLabel"
        android:fontFamily="sans-serif-light"
        android:textSize="22dp"
        android:textIsSelectable="true"
        android:layout_below="@+id/calculateDivMod"
        android:layout_alignLeft="@+id/dmTitle"
        android:layout_alignStart="@+id/dmTitle" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/quotient"
        android:fontFamily="sans-serif-light"
        android:textSize="38dp"
        android:textIsSelectable="true"
        android:gravity="right"
        android:layout_alignStart="@+id/remLabel"
        android:layout_alignEnd="@+id/remainder"
        android:layout_below="@+id/quotLabel"
        android:layout_alignLeft="@+id/dmTitle" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Remainder"
        android:id="@+id/remLabel"
        android:textSize="22dp"
        android:fontFamily="sans-serif-light"
        android:textIsSelectable="true"
        android:layout_alignStart="@+id/quotLabel"
        android:layout_below="@+id/quotient"
        android:layout_alignLeft="@+id/dmTitle" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/remainder"
        android:fontFamily="sans-serif-light"
        android:textSize="38dp"
        android:textIsSelectable="true"
        android:gravity="right"
        android:linksClickable="false"
        android:layout_alignEnd="@+id/calculateDivMod"
        android:layout_alignStart="@+id/remLabel"
        android:layout_below="@+id/remLabel"
        android:layout_alignLeft="@+id/dmTitle" />
</RelativeLayout>
