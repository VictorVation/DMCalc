<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_gravity="center"
    android:background="@color/fragbg"
    tools:context="com.victorszeto.dmcalc.MainActivity$PlaceholderFragment">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number|numberSigned"
        android:ems="8"
        android:id="@+id/base"
        android:hint="Base"
        android:enabled="true"
        android:textSize="24dp"
        android:fontFamily="sans-serif-light"
        android:focusable="true"
        android:gravity="center_horizontal"
        android:clickable="true"
        android:editable="true"
        android:layout_marginTop="24dp"
        android:imeOptions="actionNext"
        android:linksClickable="false"
        android:lines="1"
        android:maxLength="14"
        android:layout_below="@+id/rsqTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColorHighlight="#ff8800"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="8"
        android:id="@+id/exp"
        android:hint="Exponent"
        android:enabled="true"
        android:textSize="24dp"
        android:fontFamily="sans-serif-light"
        android:focusable="true"
        android:gravity="center_horizontal"
        android:clickable="true"
        android:editable="true"
        android:layout_below="@+id/base"
        android:layout_alignLeft="@+id/base"
        android:layout_alignStart="@+id/base"
        android:lines="1"
        android:maxLength="14"
        android:textColorHighlight="#ff8800"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="8"
        android:id="@+id/mod"
        android:hint="Modulus"
        android:enabled="true"
        android:textSize="24dp"
        android:fontFamily="sans-serif-light"
        android:focusable="true"
        android:gravity="center_horizontal"
        android:clickable="true"
        android:editable="true"
        android:layout_below="@+id/exp"
        android:layout_alignLeft="@+id/exp"
        android:layout_alignStart="@+id/exp"
        android:lines="1"
        android:maxLength="14"
        android:textColorHighlight="#ff8800"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Repeated Squaring."
        android:id="@+id/rsqTitle"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="19dp"
        android:textSize="34dp"
        android:fontFamily="sans-serif-thin"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compute"
        android:id="@+id/calculateRSq"
        android:fontFamily="sans-serif-light"
        android:focusable="false"
        android:clickable="true"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="base"
        android:id="@+id/baseOut"
        android:fontFamily="sans-serif-light"
        android:textSize="30dp"
        android:textIsSelectable="true"
        android:gravity="right"
        android:layout_above="@+id/modOut"
        android:layout_toLeftOf="@+id/expOut" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="exp"
        android:id="@+id/expOut"
        android:fontFamily="sans-serif-light"
        android:textSize="22dp"
        android:textIsSelectable="true"
        android:layout_below="@+id/calculateRSq"
        android:layout_toLeftOf="@+id/eq" />
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text=" = "
    android:id="@+id/eq"
    android:fontFamily="sans-serif-light"
    android:textSize="30dp"
    android:textIsSelectable="true"
        android:layout_alignTop="@+id/remOut"
        android:layout_toLeftOf="@+id/remOut" />
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="remainder"
    android:id="@+id/remOut"
    android:fontFamily="sans-serif-light"
    android:textSize="30dp"
    android:textIsSelectable="true"
    android:gravity="left"
        android:layout_alignRight="@+id/rsqTitle"
        android:layout_below="@id/calculateRSq"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="(m)"
        android:id="@+id/modOut"
        android:fontFamily="sans-serif-light"
        android:textSize="30dp"
        android:textIsSelectable="true"
        android:gravity="left"
        android:layout_below="@+id/remOut"
        android:layout_alignRight="@+id/remOut" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="mod "
        android:id="@+id/modLabel"
        android:fontFamily="sans-serif-light"
        android:textSize="30dp"
        android:textIsSelectable="true"
        android:layout_below="@+id/remOut"
        android:layout_toLeftOf="@+id/modOut" />

</RelativeLayout>
